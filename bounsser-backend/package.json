{
  "name": "bouncer-backend",
  "version": "1.0.0",
  "description": "Hybrid impersonation-detection bot for X (Twitter) - Backend API",
  "main": "dist/core/server.js",
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "tsx watch src/core/server.ts",
    "dev:simple": "tsx watch src/core/dev-server.ts",
    "build": "tsc && tsc-alias",
    "start": "node dist/core/server.js",
    "start:prod": "NODE_ENV=production node dist/core/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "jest --config jest.e2e.config.js",
    "lint": "eslint src --ext .ts,.js",
    "lint:fix": "eslint src --ext .ts,.js --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json,md}\"",
    "typecheck": "tsc --noEmit",
    "docs:generate": "typedoc src --out docs/api",
    "docs:serve": "node scripts/serve-docs.js",
    "commit": "npx git-cz",
    "db:generate": "npx prisma generate",
    "db:push": "npx prisma db push",
    "db:migrate": "npx prisma migrate dev",
    "db:migrate:prod": "npx prisma migrate deploy",
    "db:studio": "npx prisma studio",
    "db:seed": "tsx src/db/seed.ts",
    "db:reset": "npx prisma migrate reset --force",
    "worker:stream": "tsx src/workers/stream.worker.ts",
    "worker:webhook": "tsx src/workers/webhook.worker.ts",
    "worker:scoring": "tsx src/workers/scoring.worker.ts",
    "docker:build": "docker build -t bouncer-backend .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "prepare": "husky install",
    "docs:dev": "npm run docs:generate && npm run docs:serve",
    "docs:clean": "rm -rf docs/api",
    "docs:build-and-serve": "npm run docs:generate && npm run docs:serve",
    "swagger:serve": "node -e \"console.log(\"üîç Swagger UI available at: http://localhost:3000/api-docs\"); console.log(\"Start the development server with: npm run dev\")\""
  },
  "keywords": [
    "twitter",
    "impersonation",
    "detection",
    "bot",
    "security",
    "typescript",
    "nodejs"
  ],
  "author": "Bouncer's Team",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^6.17.1",
    "@types/swagger-ui-express": "^4.1.6",
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "bullmq": "^4.15.0",
    "compression": "^1.7.4",
    "connect-redis": "^7.1.0",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.17.3",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "leven": "^4.0.0",
    "morgan": "^1.10.0",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.7",
    "prom-client": "^14.2.0",
    "redis": "^4.6.10",
    "sharp": "^0.33.0",
    "string-similarity": "^4.0.4",
    "swagger-ui-express": "^5.0.0",
    "twitter-api-v2": "^1.17.0",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.1",
    "@commitlint/config-conventional": "^18.6.3",
    "@playwright/test": "^1.40.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/crypto-js": "^4.2.1",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.17.10",
    "@types/jest": "^29.5.8",
    "@types/joi": "^17.2.3",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.0",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^6.4.14",
    "@types/string-similarity": "^4.0.2",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "lint-staged": "^15.1.0",
    "playwright": "^1.40.0",
    "prettier": "^3.1.0",
    "prisma": "^6.17.1",
    "serve": "^14.2.5",
    "supertest": "^6.3.3",
    "testcontainers": "^10.4.0",
    "ts-jest": "^29.1.1",
    "tsc-alias": "^1.8.8",
    "tsx": "^4.6.0",
    "typedoc": "^0.25.13",
    "typedoc-plugin-markdown": "^3.17.1",
    "typescript": "^5.3.2"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/x17green/bouncer-backend.git"
  },
  "bugs": {
    "url": "https://github.com/x17green/bouncer-backend/issues"
  },
  "homepage": "https://github.com/x17green/bouncer-backend#readme"
}
