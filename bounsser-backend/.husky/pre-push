#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🔍 Running pre-push checks..."

# Run type checking
echo "📝 Type checking..."
# Check if typecheck script exists
if npm run | grep -q "typecheck"; then
  if ! npm run typecheck; then
    echo "❌ Type checking failed. Please fix TypeScript errors before pushing."
    exit 1
  fi
else
  echo "⚠️  No typecheck script found in package.json, skipping type checking."
fi

# Check if test script exists
if npm run | grep -q "test"; then
  echo "🧪 Running tests..."
  npm run test || exit 1
else
  echo "⚠️  No test script found in package.json, skipping tests."
fi

echo "✅ Pre-push checks completed successfully!"
