#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” Running pre-push checks..."

# Run type checking
echo "ğŸ“ Type checking..."
# Check if typecheck script exists
if npm run | grep -q "typecheck"; then
  if ! npm run typecheck; then
    echo "âŒ Type checking failed. Please fix TypeScript errors before pushing."
    exit 1
  fi
else
  echo "âš ï¸  No typecheck script found in package.json, skipping type checking."
fi

# Check if test script exists
if npm run | grep -q "test"; then
  echo "ğŸ§ª Running tests..."
  npm run test || exit 1
else
  echo "âš ï¸  No test script found in package.json, skipping tests."
fi

echo "âœ… Pre-push checks completed successfully!"
